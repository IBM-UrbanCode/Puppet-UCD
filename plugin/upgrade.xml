<plugin-upgrade
        xmlns="http://www.urbancode.com/UpgradeXMLSchema_v1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <migrate to-version="2">
    </migrate>
    <migrate to-version="3">
        <migrate-command name="Apply">
            <migrate-properties>
                <migrate-property name="commandPath" default="puppet"/>
            </migrate-properties>
        </migrate-command>
        <migrate-command name="Update From Puppet Master">
            <migrate-properties>
                <migrate-property name="commandPath" default="puppet"/>
                <migrate-property name="oneTime" default="--onetime"/>
                <migrate-property name="verbose" default="--verbose"/>
                <migrate-property name="daemonize" default="--no-daemonize"/>
            </migrate-properties>
        </migrate-command>
    </migrate>
</plugin-upgrade>